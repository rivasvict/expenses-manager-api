{
  "name": "expenses-tracker-api",
  "version": "1.0.0",
  "description": "An open source API designed to serve all needs for tracking expenses",
  "private": true,
  "scripts": {
    "test": "DEBUG=true mocha ./src/server/**/*.spec.js ./src/server/**/**/*.spec.js",
    "test-debug": "npm run test -- --inspect=0.0.0.0 --watch",
    "start-environment" : "docker-compose up -d",
    "stop-environment" : "docker-compose down",
    "no-exit-integration-test" : "INTEGRATION_TEST=true DEBUG=true mocha ./test/integration/**/*.spec.js ./test/integration/**/**/*.spec.js",
    "integration-test" : "INTEGRATION_TEST=true DEBUG=true mocha exit-test.js ./test/integration/**/*.spec.js ./test/integration/**/**/*.spec.js",
    "integration-test-debug" : "npm run no-exit-integration-test -- --inspect=0.0.0.0:9228 --watch",
    "start": "if-env NODE_ENV=production && start:production || npm run start:development",
    "start:prod": "node ./bin/www",
    "start:development": "nodemon --inspect=0.0.0.0 --exec babel-node ./bin/www"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vctr90/expenses-tracker-api.git"
  },
  "dependencies": {
    "@babel/core": "^7.3.3",
    "bcrypt": "^3.0.4",
    "chai": "^4.2.0",
    "cookie-parser": "~1.4.3",
    "cron": "^1.7.1",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "express": "~4.16.0",
    "express-async-wrapper": "^0.1.0",
    "http-errors": "~1.6.2",
    "if-env": "^1.0.4",
    "ioredis": "^4.9.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mocha": "^6.1.4",
    "mongoose": "^5.4.10",
    "mongoose-mpath": "^2.0.14",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "rewire": "^4.0.1",
    "sinon": "^7.2.4"
  },
  "author": "Victor Rivas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vctr90/expenses-tracker-api/issues"
  },
  "homepage": "https://github.com/vctr90/expenses-tracker-api#readme",
  "devDependencies": {
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "nodemon": "^1.18.9"
  }
}
