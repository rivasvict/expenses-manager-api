{
  "name": "expenses-tracker-api",
  "version": "1.0.0",
  "description": "An open source API designed to serve all needs for tracking expenses",
  "private": true,
  "scripts": {
    "dev-test": "DEBUG=true nodemon --exec 'mocha **/*.spec.js **/**/*.spec.js'",
    "test": "DEBUG=true mocha **/*.spec.js **/**/*.spec.js",
    "start": "if-env NODE_ENV=production && start:production || npm run start:development",
    "start:prod": "node ./bin/www",
    "start:development": "nodemon --inspect-brk=${DEBUG_NODE_SERVER}:${DEBUG_NODE_PORT} --exec babel-node ./bin/www"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vctr90/expenses-tracker-api.git"
  },
  "dependencies": {
    "@babel/core": "^7.3.3",
    "bcrypt": "^3.0.4",
    "chai": "^4.2.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.2.0",
    "express": "~4.16.0",
    "express-async-wrapper": "^0.1.0",
    "http-errors": "~1.6.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mocha": "^6.0.2",
    "mongoose": "^5.4.10",
    "morgan": "~1.9.0",
    "nock-record": "^0.3.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "rewire": "^4.0.1",
    "sinon": "^7.2.4"
  },
  "author": "Victor Rivas",
